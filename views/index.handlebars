
    <h1>Articles</h1>

    {{#if articles.length}}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{#isTruthy isScraping}}You've found {{articles.length}} article(s).{{/isTruthy}}
            {{#isFalsey isScraping}}You have {{articles.length}} saved article(s).{{/isFalsey}}
        </div> 
    {{else}}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>No articles yet. <a href="/scrape" class="alert-link">Go ahead and scrape some!</a>
        </div>
    {{/if}} 

    <div class="card-columns">
        {{#if articles}} 
            {{#each articles}}
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">{{headline}}</h3>
                        <h6>Written by {{author}}</h6>
                        <h6 class="text-muted">{{readableDate date}}</h6>
                        <hr>
                        <p class="card-text">{{summary}}</p>
                        <div class="formcontainer">
                            <form id="form-save-article-{{@index}}" class="form-save-article">
                                <input type="hidden" name="headline" value="{{headline}}" class="form-control">
                                <input type="hidden" name="summary" value="{{summary}}" class="form-control">
                                <input type="hidden" name="urlLink" value="{{urlLink}}" class="form-control">
                                <input type="hidden" name="author" value="{{author}}" class="form-control">
                                <input type="hidden" name="date" value="{{date}}" class="form-control">
                                <div class="d-flex">
                                    <a target="_blank" href={{urlLink}} class="btn btn-success mb-2 mx-1"><i class="fas fa-book-open pr-1"></i> Read It</a>
                                    {{#isFalsey ../isScraping}}
                                        <button id="btn-article-comment" class="btn btn-success mb-2 mx-1"><i class="far fa-comments pr-1"></i> Comment</button>
                                    {{/isFalsey}}
                                    {{#isTruthy ../isScraping}}
                                        <button id="btn-article-save" class="btn btn-success mb-2 mx-1 ml-auto" type="submit" data-id={{@index}}><i class="fas fa-thumbtack pr-1"></i></i> Pin It</button>
                                    {{/isTruthy}}
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/if}} 
    </div>



